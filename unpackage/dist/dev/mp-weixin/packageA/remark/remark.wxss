.remark {
  width: 100%;
  height: 100%;
}
.remark .remark-box {
  width: 600rpx;
  height: 300rpx;
  position: relative;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  border: 2rpx solid #CCCCCC;
  background-color: #fff;
  margin-top: 50rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 20rpx;
}
.remark .remark-box .remark-text {
  font-size: 14px;
}
.remark .remark-box .text-number {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  font-size: 14px;
}
.remark .remark-box .submit {
  width: 600rpx;
  height: 90rpx;
  background: #5468FF;
  border-radius: 4px;
  text-align: center;
  line-height: 90rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #FFFFFF;
  letter-spacing: -0.34px;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  position: absolute;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  margin-top: 30rpx;
}

