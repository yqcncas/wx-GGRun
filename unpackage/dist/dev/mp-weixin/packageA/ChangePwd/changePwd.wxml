<view class="changePwd"><view class="pwd-item"><block wx:if="{{flag}}"><input style="width:100%;" type="number" placeholder="请输入手机号" placeholder-class="item-placeholder" maxlength="11" data-event-opts="{{[['input',[['__set_model',['','phone','$event',[]]]]]]}}" value="{{phone}}" bindinput="__e"/></block><block wx:else><input style="width:100%;" type="number" disabled="{{phone.length===11}}" placeholder="请输入手机号" placeholder-class="item-placeholder" maxlength="11" data-event-opts="{{[['input',[['__set_model',['','phone','$event',[]]]]]]}}" value="{{phone}}" bindinput="__e"/></block></view><view class="pwd-item"><input type="text" placeholder="请输入验证码" placeholder-class="item-placeholder" data-event-opts="{{[['input',[['__set_model',['','code','$event',[]]]]]]}}" value="{{code}}" bindinput="__e"/><view data-event-opts="{{[['tap',[['getCode',['$event']]]]]}}" class="{{['getCode',(computedTimer)?'timer':'']}}" bindtap="__e">{{getYzm?'获取验证码':computedTimer+'s'}}</view></view><view class="pwd-item"><input style="width:100%;" type="password" placeholder="请输入新密码" placeholder-class="item-placeholder" data-event-opts="{{[['input',[['__set_model',['','newPwd','$event',[]]]]]]}}" value="{{newPwd}}" bindinput="__e"/></view><view class="pwd-item"><input style="width:100%;" type="password" placeholder="请重复密码" placeholder-class="item-placeholder" data-event-opts="{{[['input',[['__set_model',['','pwd','$event',[]]]]]]}}" value="{{pwd}}" bindinput="__e"/></view><view data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" class="confirm" bindtap="__e">确定</view></view>